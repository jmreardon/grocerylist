<div id="itemFilter">
  <h3>Active Tags</h3>
  <activeTags>
    <div class="panel">
      <ul id="present-tags" class="tag-list">
        <tag><li><a href="$(tagLink)"><tagName /></a></li></tag>
      </ul>
    </div>
  </activeTags>
  <noActiveTags>
    <div class="empty-message">None</div>
  </noActiveTags>
  <h3>Available Tags</h3>
  <additionalTags>
    <div class="panel">
      <ul id="additional-tags" class="tag-list">
        <tag><li><a href="$(tagLink)"><tagName /></a></li></tag>
      </ul>
    </div>
  </additionalTags>
  <noAdditionalTags>
    <div class="empty-message">Nothing</div>
  </noAdditionalTags>
</div>
